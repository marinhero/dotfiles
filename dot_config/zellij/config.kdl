// ===================================
// Session Configuration
// ===================================

// Enable session serialization
// session_serialization true

// Automatically attach to a session if one exists
// auto_attach true

// Layout directory
// layout_dir "/path/to/layouts"

// Mirror session enable/disable
mirror_session false

// ===================================
// Copy Configuration
// ===================================

// Choose clipboard type
// Options: "system" (default), "primary"
// copy_clipboard "system"

// Copy command override (for macOS use pbcopy, for wayland use wl-copy, for X11 use xclip
copy_command "pbcopy"

// ===================================
// Scrollback Configuration
// ===================================

// Number of lines to keep in scrollback
scrollback_lines 10000

